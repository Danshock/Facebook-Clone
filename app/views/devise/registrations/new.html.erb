<% provide(:title, "Sign Up") %>

<h2>Sign up</h2>
<div class="form-group">
  <div class="col-lg-4 col-lg-offset-4">
<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= devise_error_messages! %>

  <div class="field">
    <%= f.label :first_name, class: "sr-only" %><br />
    <%= f.text_field :first_name, autofocus: true, placeholder: "First Name", class: "form-control" %>
  </div>

  <div class="field">
    <%= f.label :last_name, class: "sr-only" %><br />
    <%= f.text_field :last_name, autofocus: true, placeholder: "Last Name", class: "form-control" %>
  </div>

  <div class="field">
    <%= f.label :email, class: "sr-only" %><br />
    <%= f.email_field :email, autofocus: true, placeholder: "Email Address", class: "form-control" %>
  </div>

  <div class="field">
    <%= f.label :password, class: "sr-only" %><br />
    <%= f.password_field :password, placeholder: "Password", class: "form-control" %>
  </div>

  <div class="field">
    <%= f.label :password_confirmation, class: "sr-only" %><br />
    <%= f.password_field :password_confirmation, placeholder: "Password Confirmation", class: "form-control" %>
  </div>
  
  <div class="actions"><br />
    <%= f.submit "Sign up", class: "btn btn-success" %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
  </div>
</div>