<header class="navbar navbar-fixed-top navbar-light" style="background-color: #3b5998;">
	<div class="container">
	<%= link_to "facebook-clone", root_path, id: "logo" %>
		<nav>
			<ul class="nav navbar-nav navbar-right">
				<!-- Show navbar menus only to signed in users -->
				<% if user_signed_in? %>
				<li><%= link_to full_name(current_user), user_path(current_user), class: "nav-element" %></li>
				<li><%= link_to "Home", root_path, class: "nav-element" %></li>
				<li><%= link_to "Users", users_path, class: "nav-element" %></li>
				<li><%= link_to "Notifications", "#", class: "nav-element" %></li>
				<!-- Bootstrap's dropdown menu -->
				<li class="dropdown">
					<a href="#" class="dropdown-toggle" data-toggle="dropdown">
						Settings <b class="caret"></b>
					</a>
					<!-- The Dropdown elements -->
					<ul class="dropdown-menu">
						<li><%= link_to "Account Details", edit_user_registration_path %></li>
						<li><%= link_to "Log out", destroy_user_session_path, method: :delete %></li>
					</ul>
				</li>
				<% else %>
				  <li><%= link_to "Sign up", new_user_registration_path, class: "nav-element" %></li>
				  <li><%= link_to "Log in", new_user_session_path, class: "nav-element" %></li>
				<% end %>
			</ul>
		</nav>
	</div>
</header>
